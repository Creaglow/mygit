<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    /*头部*/
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/banner_bg9"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/top_img"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="文章"
            android:id="@+id/top_tag" />


    </LinearLayout>

    /*中间碎片....*/
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical"
        android:background="#ffccdd">


    </LinearLayout>

    /*menu .....*/
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:id="@+id/main_radioGroup">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title1"
            android:id="@+id/main_rad1"
            android:button="@null"
            android:layout_weight="1"
            android:checked="true"
            android:textColor="@color/white"
            android:drawableTop="@drawable/item1"
            android:gravity="center"
            android:background="@drawable/menu_buttom_wz"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title2"
            android:id="@+id/main_rad2"
            android:button="@null"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:drawableTop="@drawable/forum_normal"
            android:gravity="center"
            android:background="@drawable/menu_buttom_wz"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title3"
            android:id="@+id/main_rad3"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:drawableTop="@drawable/game_normal"
            android:background="@drawable/menu_buttom_wz"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </RadioGroup>

    </LinearLayout>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:id="@+id/loading_img"
        android:background="@drawable/loading"/>


</FrameLayout>
