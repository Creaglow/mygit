<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/j10dp"
        android:layout_marginTop="@dimen/j2dp"
        android:layout_marginBottom="@dimen/j4dp" 
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >
        
        <ImageView 
            android:id="@+id/recommend_image_icon"
            android:layout_marginTop="@dimen/j0dp"
            android:layout_marginBottom="@dimen/j8dp"
            android:layout_height="@dimen/j38dp"
            android:layout_width="@dimen/j42dp"
            android:src="@drawable/sample_face"
            android:scaleType="fitXY"
            android:paddingLeft="@dimen/j5dp"
            />
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView 
                android:id="@+id/list_image_arrow"
                android:layout_width="@dimen/j10dp"
                android:layout_height="@dimen/j10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/gofor"  />
            
            <LinearLayout  
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j2dp"
                android:layout_toLeftOf="@+id/list_image_arrow"
                android:layout_marginLeft="@dimen/j5dp"
                android:layout_marginRight="@dimen/j5dp"
                android:gravity="left|center_vertical"
                android:orientation="vertical" >
                
                
                <!-- 是否已经离线下载标志 -->
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal" >
                    
                    <ImageView
                        android:id="@+id/icon_downloaded"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/downloaded"
                        android:scaleType="fitXY"
                        android:paddingRight="@dimen/j2dp"  />
                    
                    <TextView 
                        android:textSize="@dimen/font_size_16"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:id="@+id/recommend_text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标题"  />
                    
                </LinearLayout>
                
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" 
                    android:textSize="@dimen/font_size_14"
                    android:id="@+id/recommend_text_desc"
                    android:textColor="@color/darkgray"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="前言描述信息" />
          
                
                 <LinearLayout 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/j0dp"
                     android:layout_marginBottom="@dimen/j0dp"
                     android:gravity="left|center_vertical"
                     android:orientation="horizontal" >
                     
                     
                      
                       <TextView 
                         android:id="@+id/recommend_text_date_label"
                         android:textSize="@dimen/font_size_12"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" 
                         android:text="发表:" />
                      <TextView 
                         android:id="@+id/recommend_text_formatdate"
                         android:textSize="@dimen/font_size_12"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" 
                         android:text="发表日期" />
                        
                     
                      <TextView 
                         android:id="@+id/recommend_text_comments_label"
                         android:textSize="@dimen/font_size_12"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" 
                         android:layout_marginLeft="@dimen/j4dp"
                         android:text="评论:" />
                      <TextView 
                         android:id="@+id/recommend_text_comments"
                         android:textSize="@dimen/font_size_12"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"  
                         android:text="2" />
                      
                       <TextView 
                         android:id="@+id/recommend_text_view_label"
                         android:textSize="@dimen/font_size_12"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" 
                         android:layout_marginLeft="@dimen/j4dp"
                         android:text="浏览:" />
                      <TextView 
                         android:id="@+id/recommend_text_view"
                         android:textSize="@dimen/font_size_12"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"  
                         android:text="2" />
                     
                      
                 </LinearLayout>
            </LinearLayout>
            
            
        </RelativeLayout>
        
        
    </LinearLayout>
    

</LinearLayout>
