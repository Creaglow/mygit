<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/j4dp"
        android:layout_marginLeft="@dimen/j10dp"
        android:layout_marginTop="@dimen/j2dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/list_image_arrow1"
                android:layout_width="@dimen/j10dp"
                android:layout_height="@dimen/j10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/gofor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j5dp"
                android:layout_marginRight="@dimen/j5dp"
                android:layout_marginTop="@dimen/j2dp"
                android:layout_toLeftOf="@+id/list_image_arrow1"
                android:gravity="left|center_vertical"
                android:orientation="vertical" >

                <!-- 是否已经离线下载标志 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/icon_downloaded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/j2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/downloaded" />

                    <TextView
                        android:id="@+id/recommend_text_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="标题"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <TextView
                    android:id="@+id/recommend_text_desc1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="前言描述信息"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/font_size_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/j0dp"
                    android:layout_marginTop="@dimen/j0dp"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/recommend_text_date_label1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发表:"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/recommend_text_formatdate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发表日期"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/recommend_text_comments_label1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/j4dp"
                        android:text="评论:"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/recommend_text_comments1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/recommend_text_view_label1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/j4dp"
                        android:text="浏览:"
                        android:textSize="@dimen/font_size_12" />

                    <TextView
                        android:id="@+id/recommend_text_view1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="@dimen/font_size_12" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>